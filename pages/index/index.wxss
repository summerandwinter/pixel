/**index.wxss**/

@font-face {
  font-family: pixel;
  src: url('https://summerandwinter.github.io/lab/pixelart/assert/pixel_maz.eot?v=2.4.0');
  src: url('https://summerandwinter.github.io/lab/pixelart/assert/pixel_maz.eot?v=2.4.0#iefix') format('embedded-opentype'),
         url('https://summerandwinter.github.io/lab/pixelart/assert/pixel_maz.woff2?v=2.4.0') format('woff2'),
         url('https://summerandwinter.github.io/lab/pixelart/assert/pixel_maz.ttf?v=2.4.0') format('truetype'),
         url('https://summerandwinter.github.io/lab/pixelart/assert/pixel_maz.woff?v=2.4.0') format('woff'),
         url('https://summerandwinter.github.io/lab/pixelart/assert/pixel_maz.svg?v=2.4.0#pixel_maz') format('svg');
}

.row {
  display: flex;
  flex-direction: row;
}

.pixel, .empty {
  width: 20px;
  height: 20px;
  flex-shrink: 0;
  border-left: 1px solid #aaa;
  border-top: 1px solid #aaa;
  font-size: 20px;
  line-height: 20px;
  text-align: center;
  color: #4c4c4c;
  font-family: pixel;
}

.le {
  border-left: 1px solid #fff;
}

.te {
  border-top: 1px solid #fff;
}

.row .empty {
  background: #fff;
}

.bottom-controller {
  position: fixed;
  width: 100%;
  height: 40px;
  left: 0;
  bottom: 0;
}

.top-controller {
  position: fixed;
  width: 100%;
  left: 0;
  top: 0;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.dot {
  background: #000;
}

.btn {
  display: flex;
  flex-direction: row;
  width: 27px;
  flex-wrap: wrap;
}

.btn view {
  width: 3px;
  height: 3px;
  flex-shrink: 0;
}

.palette-container {
  width: 100%;
  height: 40px;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
}

.palette {
  width: 40px;
  height: 40px;
  flex-shrink: 0;
  font-size: 40px;
  line-height: 40px;
  text-align: center;
  color: #4c4c4c;
  font-family: pixel;
}
